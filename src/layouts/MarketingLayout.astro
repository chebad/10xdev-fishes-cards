---
import "../styles/global.css";
import MarketingHeader from "../components/MarketingHeader.astro";

interface Props {
  title?: string;
}

const { title = "10xdevs-fishes-cards" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <div class="relative flex min-h-screen flex-col">
      <MarketingHeader />
      <main class="flex-1">
        <slot />
      </main>
      <!-- Stopka dla niezalogowanych użytkowników -->
      <footer class="border-t border-border/40 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
        <div class="container mx-auto px-4 py-6">
          <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
            <div class="text-sm text-muted-foreground">
              © 2024 10xdevs-fishes-cards. Twórz fiszki efektywnie z pomocą AI.
            </div>
            <div class="flex items-center space-x-6">
              <!-- Link do FAQ -->
              <a 
                href="/faq" 
                class="text-sm text-muted-foreground hover:text-primary transition-colors duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-1 rounded-sm"
              >
                FAQ
              </a>
              <!-- Link do Polityki Prywatności -->
              <a 
                href="/privacy-policy" 
                class="text-sm text-muted-foreground hover:text-primary transition-colors duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-1 rounded-sm"
              >
                Polityka Prywatności
              </a>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
